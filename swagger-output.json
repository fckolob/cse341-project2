{
  "swagger": "2.0",
  "info": {
    "title": "Pet Store API",
    "description": "API documentation for the Pet Store project",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/": {
      "get": {
        "description": "Shows Hello World!",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/pets/": {
      "get": {
        "description": "Returns all the pets in the store.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "description": "Creates a new pet.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "buck"
                },
                "age": {
                  "example": "1"
                },
                "sex": {
                  "example": "male"
                },
                "hairColor": {
                  "example": "brown"
                },
                "weight": {
                  "example": "3.5"
                },
                "vaccines": {
                  "example": "updated"
                },
                "routineControll": {
                  "example": "not updated"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "422": {
            "description": "Unprocessable Entity"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/pets/{id}": {
      "get": {
        "description": "Returns the specified pet by id.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "description": "Updates the specified pet by id.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "buffy"
                },
                "age": {
                  "example": "0.5"
                },
                "sex": {
                  "example": "female"
                },
                "hairColor": {
                  "example": "any"
                },
                "weight": {
                  "example": "white"
                },
                "vaccines": {
                  "example": "updated"
                },
                "routineControll": {
                  "example": "updated"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "422": {
            "description": "Unprocessable Entity"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "Deletes the specified pet by id.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/products/": {
      "get": {
        "description": "Returns all the products in the inventory.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "description": "Creates a new product.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "cat fancy collar"
                },
                "brand": {
                  "example": "Fancy Cat"
                },
                "description": {
                  "example": "A very elegant cat collar."
                },
                "price": {
                  "example": "20.25"
                },
                "color": {
                  "example": "golden"
                },
                "inStock": {
                  "example": "yes"
                },
                "size": {
                  "example": "medium"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "422": {
            "description": "Unprocessable Entity"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "description": "Returns the specified product by id.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "description": "Updates the specified product by id.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "water container"
                },
                "brand": {
                  "example": "metal pet"
                },
                "description": {
                  "example": "metalic water container for pets"
                },
                "price": {
                  "example": "16.85"
                },
                "color": {
                  "example": "sliver"
                },
                "inStock": {
                  "example": "yes"
                },
                "size": {
                  "example": "unique"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "422": {
            "description": "Unprocessable Entity"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "Deletes the specified product by id.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}